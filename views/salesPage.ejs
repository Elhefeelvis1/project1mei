<%- include("./partials/header.ejs") %>
    <main class="salesMain">
        <div class="flash-message">
            <p class="success-msg"><%= success_msg %></p>
            <p class="failure-msg"><%= failure_msg %></p>
        </div>
        <div class="searchFilters">
            <form action="/searchItems" method="post">
                <input type="text" name="itemName" placeholder="Enter the item name">
                <label for="">Choose a category: 
                    <select name="category" id="">
                        <option hidden disabled selected value>(select an option)</option>
                        <% if(locals.categories){ %>
                        <% categories.forEach((ctg) => { %>
                        <option value="<%= ctg %>"><%= ctg %></option>
                        <% }) %>
                        <% } %>
                    </select>
                </label>
                <input type="text" name="minPrice" placeholder="Enter min price">
                <input type="text" name="maxPrice" placeholder="Enter max price">
                <button type="submit">Search <i class="fa-solid fa-search"></i></button>
            </form>
        </div>
        <div class="previousSales">
            <a href="/previousSales"><i class="fa-solid fa-arrow-left"></i> Previous Sales</a>
        </div>
        <div class="tableSection">
        <% if(locals.contents){ %>
            <div class="itemTable">
                <p>Select an item</p>
                <table>
                    <tr>
                        <th class="itemName">Item Name</th>
                        <th class="price">Price</th>
                        <th class="quantity">Quantity</th>
                        <th class="unit">Unit</th>
                    </tr>
                    <% contents.forEach((content) => { %>
                    <tr>
                        <td>
                            <form action="/selectItem" method="post">
                                <input type="submit" value="<%= content.item_name %>">
                                <input type="hidden" name="itemName" value="<%= content.item_name %>">
                                <input type="hidden" name="sellPrice" value="<%= content.unit_selling_price %>">
                                <input type="hidden" name="quantityInStock" value="<%= content.total_quantity_in_stock %>">
                                <input type="hidden" name="unit" value="<%= content.unit_name %>">
                                <input type="hidden" name="productId" value="<%= content.item_id %>">
                                <input type="hidden" name="category" value="<%= content.category_name %>">
                            </form>
                        </td>
                        <td>N<%= content.unit_selling_price %></td>
                        <td><%= content.total_quantity_in_stock %></td>
                        <td><%= content.unit_name %></td>
                    </tr>
                    <% }) %>
                </table>
            </div>
            <% } %>
            <% if(locals.selectedItems){ %>
            <div class="itemTable">
                <table>
                    <thead>
                        <tr>
                            <th class="itemName">Item Name</th>
                            <th class="price">Price</th>
                            <th class="quantity">Quantity</th>
                            <th class="unit">Unit</th>
                            <th class="category">Category</th>
                            <th class="totalCost">Cost</th>
                            <th class="actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% selectedItems.forEach((item) => { %>
                        <tr class="item-row">
                            <td><%= item.itemName %></td>
                            <td class="item-price"><%= item.sellPrice %></td>
                            <td><input class="item-quantity" type="number" name="quantity" value="<%= item.quantity %>"></td>
                            <td><%= item.unit %></td>
                            <td><%= item.category %></td>
                            <td><p class="item-total"></p></td>
                            <td>
                                <form action="/removeItem" method="post">
                                    <input type="hidden" name="id" value="<%= item.productId %>">
                                    <button type="submit"><i class="fa-solid fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                        
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <% } %>
            <div class="buttons">
                <div class="sales">
                    <a href="/saveSales">Save <i class="fa-solid fa-save"></i></a>
                    <a href="/saveSales" onclick="window.print()">Save & Print <i class="fa-solid fa-print"></i></a>
                </div>
                <div class="clear">
                    <a href="/clear">Clear all <i class="fa-solid fa-trash"></i></a>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <div class="links"></div>
        <div class="dev">
            <p>Powered by Mmaduabuchi</p>
        </div>
    </footer>
    <script>
        // Select all rows that contain an item calculation
        const itemRows = document.querySelectorAll('.item-row');

        // Loop through each item row
        itemRows.forEach(row => {
            // Get references to the elements WITHIN THE CURRENT ROW
            const priceCell = row.querySelector('.item-price'); // This is your <td> with the price
            const quantityInput = row.querySelector('.item-quantity'); // This is the input for quantity
            const totalCell = row.querySelector('.item-total');     // This is the <td> to display the row total

            // Function to calculate and display the total for THIS SPECIFIC ROW
            function calculateRowTotal() {
                // Get the fixed cost from the <td>'s text content
                const cost = parseFloat(priceCell.textContent);
                
                // Get the editable quantity from the input's value
                const quantity = parseInt(quantityInput.value);

                // Check if inputs are valid numbers
                if (!isNaN(cost) && !isNaN(quantity)) {
                    const rowTotal = cost * quantity;
                    totalCell.textContent = rowTotal.toFixed(2); // Display with 2 decimal places
                } else {
                    totalCell.textContent = 'Invalid input';
                }
            }

            // Add event listener ONLY to the quantity input for THIS SPECIFIC ROW
            quantityInput.addEventListener('input', calculateRowTotal);

            // Initial calculation when the page loads for THIS SPECIFIC ROW
            calculateRowTotal();
        });
    </script>
</body>
</html>
<%- include("./partials/footer.ejs") %>