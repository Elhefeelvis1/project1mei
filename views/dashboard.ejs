<%- include('partials/header.ejs') %>
    
    <main class="mainDashboard">
        <div class="sidebar">
            <input type="checkbox">
            <div class="hamburger">
                <span class="top-ham common"></span>
                <span class="middle-ham common"></span>
                <span class="bottom-ham common"></span>
            </div>
            <div class="menubar">
                <div>
                    <div></div>
                    <ul>
                        <li><a href=""><div class="listBorder"></div> <i class="fas fa-receipt"></i> Transactions</a></li>
                        <li><a href=""><div class="listBorder"></div> <i class="fas fa-plus"></i> Add new purchase</a></li>
                        <li><a href=""><div class="listBorder"></div> <i class="fas fa-eye"></i> View and Edit Stock</a></li>
                        <li><a href=""><div class="listBorder"></div> <i class="fas fa-refresh"></i> Return, Defects, Expired, Office Use</a></li>
                        <li><a href=""><div class="listBorder"></div> <i class="fas fa-track"></i> Product Tracker</a></li>
                        <li><div class="dash-form-btn"> <div class="listBorder"></div> <i class="fas fa-user"></i> Edit Users</div></li>
                        <li><div class="dash-form-btn"> <div class="listBorder"></div> <i class="fas fa-dollar"></i> Daily Expenses</div></li>
                        <li><div class="dash-form-btn"> <div class="listBorder"></div> <i class="fas fa-phone"></i> Add and Edit Units</div></li>
                        <li><div class="dash-form-btn"> <div class="listBorder"></div> <i class="fas fa-phone"></i> Add and Edit Categories</div></li>
                        <li><div class="dash-form-btn"> <div class="listBorder"></div> <i class="fas fa-truck"></i> Add and Edit Suppliers</div></li>
                    </ul>
                </div>
            </div>
        </div>
        <div>
            <p class="success-msg"><%= success_msg %></p>
            <p class="failure-msg"><%= failure_msg %></p>
            <div class="body">
                <div class="forms">
                    <div class="dashboard-form users-form">
                        <h3 style="text-align: center;">Edit or Add new user</h3>
                        <div class="edit">
                            <% if(locals.users){ %>
                                <form action="/editUser" method="post" id="editUserForm">
                                    <label for="userEdit">Select the user to Edit</label>
                                    <select name="userId" id="userEdit">
                                      <% users.forEach(user => { %>
                                        <option value="<%= user.id %>" >
                                          <%= user.username %>
                                        </option>
                                      <% }); %>
                                    </select>
                                    <input type="text" name="username" placeholder="Enter new username">
                                    <input type="text" name="password" id="Enter new password">
                                    <label for="change-role"></label>
                                    <select name="role" id="change-role">
                                        <option value="sales">Sales Person</option>
                                        <option value="staff">Staff</option>
                                        <option value="manager">Manger</option>
                                        <option value="admin">Administrator</option>
                                    </select>
                                    <button type="submit">Update user</button>
                                </form>
                            <% } %>
                        </div>
                        <div class="addNew">
                            <p>Add new User</p>
                            <form action="/registerUser" method="post">
                                <input type="text" name="username" placeholder="Enter username">
                                <input type="text" name="password" placeholder="Enter password">
                                <label for="role"></label>
                                <select name="role" id="role">
                                    <option value="sales">Sales Person</option>
                                    <option value="staff">Staff</option>
                                    <option value="manager">Manger</option>
                                    <option value="admin">Administrator</option>
                                </select>
                                <button type="submit">Add a new user <i class="fas fa-plus"></i></button>
                            </form>
                        </div>
                    </div>
                    <div class="dashboard-form expenses hidden">
                        <h3 style="text-align: center;">Add new expense</h3>
                        <div class="addNew">
                            <form action="/addExpenses" method="post">
                                <input type="number" name="amount" placeholder="Enter the amount">
                                <input type="text" name="description" placeholder="Enter a description">
                                <input type="number" name="userId">
                                <button type="submit">Save Expense</button>
                            </form>
                            <a href="/allExpenses">See all Expenses</a>
                        </div>
                    </div>
                    <div class="dashboard-form units-form hidden">
                        <h3 style="text-align: center;">Edit or Add new Unit</h3>
                        <div class="edit">
                            <form action="/editUnit" method="post">
                                <select name="unitId" id="unit">
                                    <option value=""></option>
                                </select>
                                <input type="text" name="unit" placeholder="Change the unit name">
                                <button type="submit">Update</button>
                            </form>
                        </div>
                        <div class="addNew">
                            <form action="/addNewUnit" method="post">
                                <input type="text" name="unit" placeholder="Enter new unit">
                                <button type="submit">Update</button>
                            </form>
                        </div>
                    </div>
                    <div class="dashboard-form categories-form hidden">
                        <h3 style="text-align: center;">Edit or Add new Category</h3>
                        <div class="edit">
                            <form action="/editCategory" method="post">
                                <select name="categoryId" id="category">
                                    <option value=""></option>
                                </select>
                                <input type="text" name="category" placeholder="Change the category name">
                                <button type="submit">Update</button>
                            </form>
                        </div>
                        <div class="addNew">
                            <form action="/addNewCategory" method="post">
                                <input type="text" name="category" placeholder="Enter new category">
                                <button type="submit">Update</button>
                            </form>
                        </div>
                    </div>
                    <div class="dashboard-form suppliers-form hidden">
                        <h3 style="text-align: center;">Edit or Add new Supplier</h3>
                        <div class="edit">
                            <form action="/editSupplier" method="post">
                                <select name="supplierId" id="supplier">
                                    <option value=""></option>
                                </select>
                                <input type="text" name="supplier" placeholder="Change the supplier name">
                                <button type="submit">Update</button>
                            </form>
                        </div>
                        <div class="addNew">
                            <form action="/addNewSupplier" method="post">
                                <input type="text" name="supplier" placeholder="Enter new supplier">
                                <button type="submit">Update</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="data-display">
    
                </div>
            </div>
        </div>
    </main>

    <script src="./dom/dashboardDom.js" type="text/javascript"></script>
</body>
</html>