<%- include("partials/header.ejs") %>

<main class="d-flex">
    <div class="sideBar bg-dark text-white p-2" style="min-width: 200px; min-height: 100vh;">
        <h4 class="text-center mb-4">Stock Management</h4>
        <ul class="nav flex-column gap-2">
            <li id="allStocksBtn" class="nav-item">
                <i class="fa-solid fa-boxes-stacked"></i> View all stocks
            </li>
            <li id="stockOverviewBtn" class="nav-item">
                <i class="fa-solid fa-boxes-stacked"></i> Stock Overview
            </li>
            <li id="adjustmentModeBtn" class="nav-item">
                <i class="fa-solid fa-sliders"></i> Stock Adjustments
            </li>
        </ul>
    </div>

    <div class="dataPart flex-grow-1 p-4">
        <div class="topBox d-flex justify-content-between align-items-center mb-4">
            <div class="searchFilters bg-success p-3 rounded col-md-9">
                <form id="searchForm" class="d-flex gap-2">
                    <button class="btn btn-dark col-md-2" type="submit">
                        Search <i class="fa-solid fa-search"></i>
                    </button>
                    <input id="itemName" class="form-control" type="text" placeholder="Item name">
                    <select id="category" class="form-select">
                        <option value="">(All Categories)</option>
                        <% if(locals.categories){ categories.forEach(ctg => { %>
                            <option value="<%= ctg.name %>"><%= ctg.name %></option>
                        <% })} %>
                    </select>
                    <input id="minPrice" class="form-control" type="number" placeholder="Min price">
                    <input id="maxPrice" class="form-control" type="number" placeholder="Max price">
                </form>
            </div>
            <div class="newItem col-md-2 text-end">
                <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#addItemModal">
                    Add Item <i class="fa-solid fa-plus"></i>
                </button>
            </div>
        </div>

        <div id="stockDisplayTable" class="stockDisplay shadow-sm bg-white rounded p-3">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Item Name</th>
                        <th>Category</th>
                        <th>Unit</th>
                        <th>Cost Price</th>
                        <th>Sell Price</th>
                        <th>Qty</th>
                        <th>Last Update</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="itemsTableBody">
                </tbody>
            </table>
            <div id="paginationControls" class="d-flex justify-content-center mt-3 flex-wrap">
            </div>
        </div>
        <div id="adjustmentContainer" class="shadow-sm bg-white rounded p-3" style="display: none;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5><i class="fa-solid fa-sliders"></i> Stock Adjustment List</h5>
                <button id="saveAdjustmentsBtn" class="btn btn-success">
                    Process Adjustments <i class="fa-solid fa-check-double"></i>
                </button>
            </div>
            <table class="table table-bordered align-middle" id="adjustmentTable">
                <thead class="table-secondary">
                    <tr>
                        <th>Item Name</th>
                        <th>Current Stock</th>
                        <th>Adjustment (+/-)</th>
                        <th>New Stock</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="adjustmentTableBody"></tbody>
            </table>
        </div>
    </div>
    <div class="modal fade" id="searchResultModal" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Search Results</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <table id="searchResultsTable" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Action</th>
                                <th>Item Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Unit</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editItemModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form id="editItemForm">
                    <div class="modal-header bg-warning">
                        <h5 class="modal-title">Edit Item: <span id="editItemTitle"></span></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" id="editItemId">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Brand Name</label>
                                <input type="text" id="editBrandName" class="form-control" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Generic Name</label>
                                <input type="text" id="editGenericName" class="form-control">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Category</label>
                                <select id="editCategory" class="form-select">
                                    <% if(locals.categories){ categories.forEach(ctg => { %>
                                        <option value="<%= ctg.name %>"><%= ctg.name %></option>
                                    <% })} %>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Unit Type</label>
                                <select id="editUnit" class="form-select">
                                    <% if(locals.units){ units.forEach(u => { %>
                                        <option value="<%= u.name %>"><%= u.name %></option>
                                    <% })} %>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Cost per Unit</label>
                                <input type="number" id="editCost" class="form-control" step="0.01">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Mark-up (%)</label>
                                <input type="number" id="editMarkup" name="markup" class="form-control" value="20">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Price per Unit</label>
                                <input type="number" id="editPrice" class="form-control" step="0.01">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Re-order Level</label>
                                <input type="number" id="editReorder" class="form-control">
                            </div>
                            <div class="col-md-8">
                                <label class="form-label">Description</label>
                                <textarea id="description" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Update Item</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="addItemModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="addItemModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form id="addItemForm">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title" id="addItemModalLabel">Register New Product</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Brand Name / Tag</label>
                                <input type="text" name="name" class="form-control" placeholder="e.g. Panadol Extra" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Generic Name</label>
                                <input type="text" name="genericName" class="form-control" placeholder="e.g. Paracetamol">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Barcode / SKU</label>
                                <input type="text" name="barcode" class="form-control" placeholder="Scan or type barcode">
                            </div>
                            
                            <div class="col-md-3">
                                <label class="form-label">Category</label>
                                <select name="category" class="form-select" required>
                                    <option value="" selected disabled>Select...</option>
                                    <% if(locals.categories){ categories.forEach(ctg => { %>
                                        <option value="<%= ctg.name %>"><%= ctg.name %></option>
                                    <% })} %>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Base Unit</label>
                                <select name="unit" class="form-select" required>
                                    <option value="" selected disabled>Select...</option>
                                    <% if(locals.units){ units.forEach(u => { %>
                                        <option value="<%= u.name %>"><%= u.name %></option>
                                    <% })} %>
                                </select>
                            </div>
    
                            <div class="col-md-3">
                                <label class="form-label">Cost Per Unit</label>
                                <input type="number" id="addCost" name="cost" class="form-control" step="1" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Mark-up (%)</label>
                                <input type="number" id="addMarkup" name="markup" class="form-control">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Selling Price</label>
                                <input type="number" id="addPrice" name="price" class="form-control" step="10" required>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Re-order Level</label>
                                <input type="number" name="reorderLevel" class="form-control" required>
                            </div>
    
                            <div class="col-12">
                                <label class="form-label">Description / Notes</label>
                                <textarea name="description" class="form-control" rows="2"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Product <i class="fa-solid fa-save"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
